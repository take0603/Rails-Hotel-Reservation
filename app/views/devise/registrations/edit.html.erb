<div class="wrapper">
  <h2 class="h2-title">設定</h2>

  <div class="user-container">
    <ul class="user-column">
      <li><%= link_to "アカウント", users_account_path %></li>
      <li><%= link_to "プロフィール", users_profile_path %></li>
    </ul>

    <div class="user-account">
      <div class="account-title-header">
        <h3>アカウント</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="account-content">
          <%= f.label :email, class: "account-content-label" %>
          <div class="form-inputarea">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "profile-form", placeholder: "メールアドレスを入力してください" %><br>
            <%= render "shared/error_messages", object: f.object, key: "email" %>
          </div>
        </div>

        <div class="account-content">
          <%= f.label :password, class: "account-content-label" %>
          <div class="form-inputarea">
            <%= f.password_field :password, autocomplete: "new-password", class: "profile-form", placeholder: "変更後パスワードを入力" %>
            <%= render "shared/error_messages", object: f.object, key: "password" %>
          </div>
        </div>

        <div class="account-content">
          <%= f.label :password_confirmation, class: "account-content-label" %>
          <div class="form-inputarea">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "profile-form", placeholder: "変更後パスワードを入力" %>
            <%= render "shared/error_messages", object: f.object, key: "password_confirmation" %>
          </div>
        </div>

        <div class="account-content">
          <%= f.label :current_password, class: "account-content-label" %>
          <div class="form-inputarea">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "profile-form", placeholder: "現在のパスワードを入力" %>
            <%= render "shared/error_messages", object: f.object, key: "current_password" %>
          </div>
        </div>

        <div class="profile-submit-group">
          <%= link_to "キャンセル", users_account_path, class: "form-account-cancel" %>
          <%= f.submit "保存", class: "form-account-submit" %>
        </div>
      <% end %>

    </div>

  </div>
</div>
