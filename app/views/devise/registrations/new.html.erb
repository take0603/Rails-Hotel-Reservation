<div class="signin-wrapper">

  <div class="signup-wrapper">
    <div class="signup-container">
      <h2 class="h2-signup">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名を入力" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレスを入力" %>
        </div>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワードを入力" %>
        </div>
        <div class="actions">
          <%= f.submit "アカウントを作成", class: "btn-signupform" %>
        </div>
        <%= link_to "アカウントをお持ちの方はログイン", user_session_path, class: "signin_link" %>
      <% end %>
    </div>
  </div>
</div>
