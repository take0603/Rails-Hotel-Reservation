<%= form_with model: @reservation_confirm do |form| %>
  <%= form.hidden_field :checkin_date, value: @reservation[:checkin_date] %>
  <%= form.hidden_field :checkout_date, value: @reservation[:checkout_date] %>
  <%= form.hidden_field :people_num, value: @reservation[:people_num] %>
  <%= form.hidden_field :room_id, value: @reservation.room_id %>
  <%= form.hidden_field :user_id, value: @reservation.user_id %>

  <%= form.submit %>
<% end %>
