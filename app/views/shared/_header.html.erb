<header>
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%=  link_to image_tag("logo.png"), root_path, class: "link" %>

        <div class="justify-content-end" id="navbarNavDarkDropdown">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= image_tag user_image(current_user), class: "usericon" %>
                <%= current_user.name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDarkDropdownMenuLink">
                <li class="ps-2"><%= link_to "施設の新規登録", new_room_path %></li>
                <li><hr class="dropdown-divider"></li>
                <li class="ps-2"><%= link_to "予約済み一覧", reservations_path %></li>
                <li class="ps-2"><%= link_to "登録済み一覧", rooms_own_path %></li>
                <li class="ps-2"><%= link_to "アカウント設定", users_account_path %></li>
                <li><hr class="dropdown-divider"></li>
                <li class="ps-2"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% else %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%=  link_to image_tag("logo.png"), root_path, class: "link" %>
        <ul class="header-not-signin">
          <li><%= link_to "ログイン", user_session_path, class: "btn-signin" %></li>
          <li><%= link_to "新規登録", new_user_registration_path, class: "btn-signup" %></li>
        </ul>
      </div>
    </nav>
  <% end %>
</header>
